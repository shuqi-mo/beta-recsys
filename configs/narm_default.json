{
    "system": {
        "root_dir": "default",
        "log_dir": "logs/",
        "result_dir": "results/",
        "process_dir": "processes/",
        "checkpoint_dir": "checkpoints/",
        "dataset_dir": "datasets/",
        "run_dir": "runs/",
        "tune_dir": "tune_results/",
        "device": "gpu",
        "seed": 2020,
        "metrics": ["ndcg", "precision", "recall", "map"],
        "k": [5, 10],
        "valid_metric": "ndcg",
        "valid_k": 10,
        "result_file": "result.csv",
        "save_mode": "average"
    },
    "dataset": {
        "dataset": "ml_100k",
        "data_split": "temporal",
        "validate": true,
        "train_validate": 1,
        "download": false,
        "random": false,
        "test_rate": 0.2,
        "by_user": false,
        "n_test": 0,
        "n_negative": 0,
        "result_col": ["dataset", "data_split", "validate"]
    },
    "model": {
        "model": "narm",
        "config_id": "default",
        "result_col": ["model", "emb_dim", "batch_size", "optimizer", "lr"],
        "batch_size": 1024,
        "emb_dim": 64,
        "embedding_dim": 32,
        "lr": 0.01,
        "device": "gpu",
        "optimizer": "adam",
        "num_epoch": 200,
        "max_epoch": 200,
        "max_n_update": 20,
        "hidden_size": 100, 
        "n_layers": 1,
        "dropout_input": 0.25,
        "dropout_hidden": 0.5,
        "lr_dc": 0.1,
        "lr_dc_step": 80,
        "loss": "bpr-max",
        "final_act": "linear",
        "hidden_act": "tanh", 
        "layers": [100],
        "n_epochs": 10,
        "dropout_p_hidden": 0.0,
        "dropout_p_embed": 0.0,
        "lr": 0.01,
        "momentum": 0.0,        
        "lmbd": 0.0, 
        "embedding": 0, 
        "n_sample": 2048, 
        "sample_alpha": 0.75, 
        "smoothing": 0.0, 
        "constrained_embedding": false,
        "adapt": "adagrad", 
        "adapt_params": [], 
        "grad_cap": 0.0, 
        "bpreg": 1.0,
        "sigma": 0.0, 
        "init_as_normal": false, 
        "train_random_order": false, 
        "time_sort": true,
        "GIVEN_K": -1,
        "LOOK_AHEAD": 1,
        "STEP": 1,
        "scroll": 0,
        "save_name": "narm.model"
    },
    "tunable": [
        {"name": "lr", "type": "choice", "values": [0.01]}
    ]
