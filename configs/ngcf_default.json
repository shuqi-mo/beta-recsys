{
    "system": {
        "root_dir": "default",
        "log_dir": "logs/",
        "result_dir": "results/",
        "process_dir": "processes/",
        "checkpoint_dir": "checkpoints/",
        "dataset_dir": "datasets/",
        "run_dir": "runs/",
        "tune_dir": "tune_results/",
        "device": "gpu",
        "seed": 2020,
        "metrics": ["ndcg", "precision", "recall", "map"],
        "k": [5, 10, 20],
        "valid_metric": "ndcg",
        "valid_k": 10,
        "result_file": "ngcf_result.csv",
        "save_mode": "average"
    },
    "dataset": {
        "dataset": "ml_100k",
        "data_split": "leave_one_out",
        "download": false,
        "random": false,
        "test_rate": 0.2,
        "by_user": false,
        "n_test": 10,
        "n_negative": 100,
        "result_col": ["dataset","data_split","test_rate","n_negative"]
    },
    "model": {
        "model": "NGCF",
        "config_id": "default",
        "batch_size": 1024,
        "regs": [1e-5],
        "emb_dim": 64,
        "layer_size": [64, 64, 64],
        "lr": 0.05,
        "optimizer": "adam",
        "mess_dropout": [0.1, 0.1, 0.1],
        "loss": "bpr",
        "max_epoch": 200,
        "max_n_update": 20,
        "save_name": "ngcf.model",
        "result_col": ["model","emb_dim","batch_size","optimizer","lr","regs"]
    },
    "tunable": [
        {"name": "lr", "type": "choice", "values": [0.1,0.05,0.0025,0.0005,0.00025]},
        {"name": "layer_size", "type": "choice", "values": [[32,32,32],[64,64,64],[128,128,128]]}
    ]
}
